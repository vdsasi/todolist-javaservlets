<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>MainPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchTasks</servlet-name>
        <servlet-class>FetchTasks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompleteTaskServlet</servlet-name>
        <servlet-class>CompleteTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveTaskServlet</servlet-name>
        <servlet-class>RemoveTaskServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewTask</servlet-name>
        <servlet-class>NewTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/MainPageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchTasks</servlet-name>
        <url-pattern>/FetchTasks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompleteTaskServlet</servlet-name>
        <url-pattern>/CompleteTaskServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveTaskServlet</servlet-name>
        <url-pattern>/RemoveTaskServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewTask</servlet-name>
        <url-pattern>/NewTask</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
